@using Shared.Models
@inject IJSRuntime js

<header class="d-print-none">
    <div class="container text-center text-lg-left">
        <div class="pt-4 clearfix">
            <h1 class="site-title mb-0">@MainInfo.Name</h1>
            <nav class="site-nav">
                <ul class="nav justify-content-center">

                    <li class="nav-item">
                        <a class="nav-link" href="" @onclick:preventDefault="true"
                           @onclick="@(() => ScrollToSection("about"))">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="" @onclick:preventDefault="true"
                           @onclick="@(() => ScrollToSection("skills"))">Skills</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="" @onclick:preventDefault="true"
                           @onclick="@(() => ScrollToSection("experience"))">Experience</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="" @onclick:preventDefault="true"
                           @onclick="@(() => ScrollToSection("education"))">Education</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="" @onclick:preventDefault="true"
                           @onclick="@(() => ScrollToSection("portfolio"))">Portfolio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="" @onclick:preventDefault="true"
                           @onclick="@(() => ScrollToSection("references"))">References</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="" @onclick:preventDefault="true"
                           @onclick="@(() => ScrollToSection("contact"))">Contact</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</header>

@code {
    [Parameter]
    public MainInfoModel MainInfo { get; set; } = default!;

    private async Task ScrollToSection(string id)
    {
        await js.InvokeVoidAsync("scrollToSection", id);
    }

}
